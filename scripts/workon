#!/bin/bash

ECHO=

if [ "$1" == "" ]
then
  branch=ghini-1.0-dev
elif expr "$1" : '[0-9]\+$' >/dev/null
then
  branch=issue-$1
else
  branch=ghini-$1-dev
fi

venv=$(echo $branch | sed -e 's/ghini/ghide/')

